        <!-- Sidebar Control Panel - Scaled down -->
        <VBox alignment="TOP_CENTER" prefHeight="626.0" prefWidth="219.0" style="-fx-background-color: #550000; -fx-padding: 15; -fx-spacing: 15; -fx-min-width: 200;">
