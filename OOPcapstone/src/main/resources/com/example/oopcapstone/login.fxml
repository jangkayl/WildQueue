<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.paint.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.oopcapstone.LoginController"
            prefHeight="360.0" prefWidth="640.0"
            style="-fx-background-color: linear-gradient(to bottom right, #f5f7fa, #c3cfe2);">

    <!-- Main Content Container -->
    <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- Header Section -->
        <VBox alignment="CENTER" spacing="10">
            <StackPane>
                <Circle radius="40" fill="#3f51b5" stroke="#303f9f" strokeWidth="2"/>
                <Text fill="white" fontSmoothingType="LCD">
                    <font>
                        <Font name="Arial" size="24"/>
                    </font>
                    <text>âœ“</text>
                </Text>
            </StackPane>
            <Text fill="#333" fontSmoothingType="LCD">
                <font>
                    <Font name="Arial Bold" size="24"/>
                </font>
                <text>Welcome Back</text>
            </Text>
            <Text fill="#666">
                <font>
                    <Font name="Arial" size="14"/>
                </font>
                <text>Please login to continue</text>
            </Text>
        </VBox>

        <!-- Login Form -->
        <GridPane hgap="15" vgap="15" alignment="CENTER">
            <padding><Insets top="10" right="25" bottom="10" left="25"/></padding>

            <!-- Username Field -->
            <Label text="Username" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
            <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0"
                       promptText="Enter your username" prefWidth="250"
                       style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd; -fx-border-width: 1;"/>

            <!-- Password Field -->
            <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="1"
                   style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                           promptText="Enter your password" prefWidth="250"
                           style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #ddd; -fx-border-width: 1;"/>

            <!-- Remember Me Checkbox -->
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="2" spacing="5">
                <CheckBox fx:id="rememberMe" text="Remember me"
                          style="-fx-text-fill: #555; -fx-font-size: 13px;"/>
            </HBox>

            <!-- Login Button -->
            <Button fx:id="loginButton" text="LOGIN" GridPane.columnIndex="1" GridPane.rowIndex="3"
                    defaultButton="true" prefWidth="250"
                    style="-fx-background-color: #3f51b5; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"/>
        </GridPane>

        <!-- Footer Links -->
        <HBox alignment="CENTER" spacing="20">
            <Hyperlink text="Forgot Password?" style="-fx-text-fill: #666; -fx-border-color: transparent;"/>
            <Text fill="#999" text="|"/>
            <Hyperlink text="Create Account" style="-fx-text-fill: #3f51b5; -fx-font-weight: bold; -fx-border-color: transparent;"/>
        </HBox>
    </VBox>

    <!-- Error Message Label (initially hidden) -->
    <Label fx:id="errorLabel" alignment="CENTER" layoutX="170" layoutY="300"
           style="-fx-text-fill: #e53935; -fx-font-weight: bold;" visible="false"/>
</AnchorPane>